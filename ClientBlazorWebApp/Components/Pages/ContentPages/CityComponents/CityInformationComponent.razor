
<div>
    <label for="Fn" class="form-label">City Name</label>
    <InputText id="Fn" @bind-Value="City1!.Name" class="form-control" />
    <div class="cus-error" style="color:red">
        <ValidationMessage For="@(() => City1!.Name)" class="field-validation-error" />
    </div>

    <div class="form-group">
         <label for="CitySelect">City:</label>
         <select id="CitySelect" class="form-control" @bind="City1.CountryId" style="width: auto;" >
             <option value="">Select a City</option>
             @if(Countries is not null)
                 {
                      @foreach (var City in Countries)
             {
                 <option value="@City.Id">@City.Name</option>
             }
                 }
                
         </select>
    </div>

</div>



@code {
    [Parameter]
    public List<Country> Countries { get; set; } = new();

    [Parameter]
    public City City1 { get; set; } = new();

    [Parameter] public EventCallback<int>OnSelection{ get; set; }
   
}