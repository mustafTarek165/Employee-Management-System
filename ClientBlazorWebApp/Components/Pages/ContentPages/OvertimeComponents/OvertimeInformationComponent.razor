
<div>
    <label for="S" class="form-label">Employee Id</label>
    <input id="S" value="@Overtime1!.EmployeeId" class="form-control"  disabled/>
    <div class="cus-error" style="color:red">
        <ValidationMessage For="@(() => Overtime1!.EmployeeId)" class="field-validation-error" />
    </div>
    
    
    <label for="Fn" class="form-label">Start Date</label>
    <InputDate id="Fn" @bind-Value="Overtime1!.StartDate" class="form-control" />
    <div class="cus-error" style="color:red">
        <ValidationMessage For="@(() => Overtime1!.StartDate)" class="field-validation-error" />
    </div>

  
     <label for="F" class="form-label">End Date</label>
    <InputDate id="F" @bind-Value="Overtime1!.EndDate" class="form-control" />
    <div class="cus-error" style="color:red">
        <ValidationMessage For="@(() => Overtime1!.EndDate)" class="field-validation-error" />
    </div>

     <label for="S" class="form-label">Number Of Days</label>
    <input id="S" value="@Overtime1!.NumOfDays" class="form-control" disabled />
    <div class="cus-error" style="color:red">
        <ValidationMessage For="@(() => Overtime1!.NumOfDays)" class="field-validation-error" />
    </div>

    <div class="form-group">
         <label for="OvertimeSelect">Overtime:</label>
         <select id="OvertimeSelect" class="form-control" @bind="Overtime1.OvertimeTypeId" style="width: auto;" >
             <option value="">Select a Overtime</option>
             @if(OvertimeTypes is not null)
                 {
                      @foreach (var Overtime in OvertimeTypes)
             {
                 <option value="@Overtime.Id">@Overtime.Name</option>
             }
                 }
                
         </select>
    </div>

</div>



@code {
    [Parameter]
    public List<OvertimeType> OvertimeTypes { get; set; } = new();

    [Parameter]
    public Overtime Overtime1 { get; set; } = new();

  
}