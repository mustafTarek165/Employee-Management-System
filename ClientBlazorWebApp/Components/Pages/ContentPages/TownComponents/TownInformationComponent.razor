
<div>
    <label for="Fn" class="form-label">Town Name</label>
    <InputText id="Fn" @bind-Value="Town!.Name" class="form-control" />
    <div class="cus-error" style="color:red">
        <ValidationMessage For="@(() => Town!.Name)" class="field-validation-error" />
    </div>

    <div class="form-group">
         <label for="Citieselect">City:</label>
         <select id="Citieselect" class="form-control" @bind="Town.CityId" style="width: auto;">
             <option value="">Select a City</option>
             @if(Cities is not null)
                 {
                      @foreach (var City in Cities)
             {
                 <option value="@City.Id">@City.Name</option>
             }
                 }
                
         </select>
    </div>

</div>



@code {
    [Parameter]
    public List<City> Cities { get; set; } = new();

    [Parameter]
    public Town Town { get; set; } = new();

    [Parameter] public EventCallback<int>OnSelection{ get; set; }
    

}